<div
  class="d-flex flex-column align-items-center flex-shrink-0 p-3 bg-lighta h-100 border-start border-end position-fixed"
  style="width:20%">
  <ul class="nav nav-pills flex-column mb-auto text-start">
    <li><%= link_to "Bookworm", root_path, id: "logo",class:"fs-4 text-decoration-none link-dark" %></li>
    <%# current_userはif_logged_in内に入れる %>
    <% if logged_in? %>
    <li><%= link_to "投稿一覧", user_path(current_user) %></li>
    <li><%= link_to "いいね一覧", like_list_path(current_user) %></li>
    <li><%= link_to "ユーザー一覧", users_path %></li>
    <li><%#= link_to "プロフィール", current_user %></li>
    <li><%= link_to "このサイトについて", about_path %></li>
    <li><%= link_to "お問い合わせ", contact_path %></li>
    <hr>
    <li class="dropdown">
      <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle"
        id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
        <%= gravatar_for current_user, size: 32 %>
        <strong><%= current_user.name %></strong>
      </a>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <li><%= link_to "ユーザー情報編集",  edit_user_path(current_user) , class:"dropdown-item" %></li>
        <li><%= link_to "ログアウト", logout_path, method: :delete, class:"dropdown-item" %></li>
      </ul>
    </li>
    <% else %>
    <li><%= link_to "ログイン", login_path %></li>
    <% end %>
  </ul>
</div>