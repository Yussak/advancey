<header class="pc-only">
  <div class="header_inner">

    <div class="header_left">
      <%= link_to "Bookworm", root_path, id: "logo", class:"header_logo fs-4 text-decoration-none link-dark" %>
      <div class="header_search_form">
        <%= form_with url: search_posts_path, method: :get do |f| %>
        <%= f.text_field :keyword, placeholder: "語句で投稿検索", class: "form-control" %>
        <%= render 'posts/action_form', f: f %>
        <%= f.submit "検索", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

    <ul class="header_nav">
      <li class="nav-item"><%= link_to "ユーザー一覧", users_path %></li>
      <li class="nav-item"><%= link_to "このサイトについて", about_path %></li>
      <li class="nav-item"><%= link_to "お問い合わせ", contact_path %></li>
      <% if logged_in? %>
      <li class="dropdown">
        <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle"
          id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
          <%= gravatar_for current_user, size: 32 %>
          <strong><%= current_user.name %></strong>
        </a>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <li><%= link_to "プロフィール", user_path(current_user), class: "dropdown-item" %></li>
          <li><%= link_to "ユーザー情報編集",  edit_user_path(current_user) , class: "dropdown-item" %></li>
          <li><%= link_to "ログアウト", logout_path, method: :delete, class: "dropdown-item" %></li>
        </ul>
      </li>
      <li class="pc-only"><%= link_to "投稿する", new_post_path, remote: true, class: "btn btn-primary" %></li>
      <% else %>
      <li><%= link_to "ログイン", login_path %></li>
      <% end %>
    </ul>

  </div>
</header>

<style>
  body {
    /* 固定ヘッダーと被せない */
    padding-top: 100px;
  }

  header {
    background-color: #fff;
    border-bottom: 1px solid #000;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 100;
    height: 80px;
  }

  .header_inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    padding-bottom: 1rem;
    max-width: 1400px;
    width: 100%;
    margin: 0 auto;
  }

  /* header 右側 */
  .header_nav {
    display: flex;
    margin: 0;
  }

  .header_nav li:not(:last-child) {
    margin-right: 1.5rem;
  }

  .header_nav a {
    text-decoration: none;
  }

  /* header 左側 */
  .header_left {
    display: flex;
  }

  .header_logo {
    margin-right: 20px;
  }

  .header_search_form form {
    display: flex;
  }

  .header_search_form input {
    width: 140px;
  }

  .header_search_form select {
    width: 160px;
    /* 他に上下margin書いてるのでまとめるとくずれる */
    margin-right: 10px;
    margin-left: 10px;
  }

  .header_search_form input[type="submit"] {
    width: 80px;
  }
</style>