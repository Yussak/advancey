<% provide(:title, 'お問い合わせ') %>
<h1>お問い合わせ</h1>
<div class="row">
  <div class="col-md-6 mx-auto text-start">
    <p>お名前 : <%= @inquiry.name %></p>
    <p>メールアドレス : <%= @inquiry.email %></p>
    <p>メッセージ : <%= @inquiry.message %></p>
  </div>
</div>

<%= form_with(model: @inquiry) do |f| %>
<%= f.hidden_field :name %>
<%= f.hidden_field :email %>
<%= f.hidden_field :message %>
<%= f.submit '送信', class: "btn btn-primary col-md-6" %>
<% end %>

<%= form_with(model: @inquiry, url: back_path) do |f| %>
<%= f.hidden_field :name %>
<%= f.hidden_field :email %>
<%= f.hidden_field :message %>
<%= f.submit '入力画面に戻る', class: "btn btn-primary col-md-6" %>
<% end %>