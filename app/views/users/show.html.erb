<% provide(:title, @user.name) %>
<div>
  <%= gravatar_for @user %>
  <h1><%= @user.name %>さん</h1>
</div>
<div>
  <%= render 'shared/stats' %>
  <%= render 'follow_form' if logged_in? %>
</div>
<% if current_user?(@user) %>
<%= link_to "プロフィールを編集", edit_user_path(current_user) %>
<% end %>
<% unless @user.profile.nil? %>
<p>プロフィール</p>
<div class="border border-dark w-50 mx-auto">
  <p><%= simple_format(@user.profile) %></p>
</div>
<% end %>
<hr>
<div class="row">
  <div class="col-md-8 mx-auto">
    <%= render 'shared/user_feed_list' %>
  </div>
</div>