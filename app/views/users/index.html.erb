<% provide(:title, 'ユーザー一覧') %>
<h1>ユーザー一覧</h1>
<ul class="users col-md-6 mx-auto">
  <% @users.each do |user| %>
  <li class="d-flex">
    <%= gravatar_for user, size: 50 %>
    <%= link_to user.name, user %>
    <% if current_user.admin? %>
    <%= link_to "退会する", user, method: :delete, data: { confirm: "本当によろしいですか？" } %>
    <% end %>

    <%#= render 'users/follow_form' if logged_in? %>

    <%# 元の %>
    <%# if !current_user?(user) && current_user.following?(user) %>
    <%# <p>フォロー中</p> %>
    <%#= render 'unfollow', user: @user %>
    <%# elsif !current_user?(user) && !current_user.following?(user) %>
    <%# <p>フォローする</p> %>
    <%#= render 'follow', user: @user  %>
    <%# end %>

  </li>
  <% end %>
  <%= paginate @users %>
</ul>