<% provide(:title, 'ユーザー一覧') %>
<h1>ユーザー一覧</h1>

<%#= will_paginate %>

<ul class="users col-md-6 mx-auto">
  <% @users.each do |user| %>
  <li>
    <%= gravatar_for user, size: 50 %>
    <%= link_to user.name, user %>
    <% if current_user?(user) || current_user.admin? %>
    <%= link_to "退会する", user, method: :delete,
                                  data: { confirm: "本当によろしいですか？" } %>
    <% end %>
  </li>
  <% end %>
</ul>

<%#= will_paginate %>