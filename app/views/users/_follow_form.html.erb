<% unless current_user?(@user) %>
<div class="w-50 mx-auto">
  <div id="follow_form">
    <% if current_user.following?(@user) %>
    <%#= render 'unfollow', user: @user %>
    <%= render 'unfollow' %>
    <%#= render 'unfollow', user: user %>
    <% else %>
    <%#= render 'follow', user: @user %>
    <%= render 'follow' %>
    <%#= render 'follow', user: user %>
    <% end %>
  </div>
  <% end %>