<% provide(:title, "ログイン") %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 mx-auto">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

    <%= f.label :メールアドレス %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :パスワード %>
    <%= link_to "パスワードを忘れたらこちら", new_password_reset_path %>
    <%= f.password_field :password, class: 'form-control' %>


    <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
    <span>Remember me on this computer</span>
    <% end %>

    <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>

    <%#= f.submit "ゲストログイン", class: "btn btn-primary" %>
    <p><%= link_to "Googleアカウントでログイン", "/auth/google_oauth2", method: :post %></p>
    <%#= link_to image_tag("btn_google_signin_light_normal_web.png"), "/auth/google_oauth2", method: :post %>
    <p><%= link_to "新規登録はこちら", signup_path %></p>
  </div>
</div>