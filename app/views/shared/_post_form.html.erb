<%= form_with(model: @post, local: true) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="field">
  <%= f.text_area :content, placeholder: "何か入力してください！！！" %>
</div>
<span class="image">
  <%= f.file_field :image %>
</span>
<%= f.submit "Post", class: "btn btn-primary" %>
<% end %>