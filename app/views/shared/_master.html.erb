  <ol class="posts master-posts" id="master-posts">
    <% elsif current_page?(private_posts_path) %>
    <ol class="posts master-private-posts" id="master-posts">
      <% end %>

      <%= render posts %>
    </ol>
    <%= paginate posts %>
</div>