<li id="post-<%= post.id %>">
  <span class="post_upper">
    <%= link_to gravatar_for(post.user, size: 50), post.user %>
    <span class="user"><%= link_to post.user.name, post.user %></span>
    <span class="timestamp">
      <%= post.created_at.to_s(:datetime_jp) %>
    </span>
  </span>
  <span class="content"><%= post.content %></span>
  <%= image_tag post.display_image  if post.image.attached? %>
  <% if current_user?(post.user) %>
  <div class="dropdown">
    <button class="btn btn-primary" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown"
      aria-expanded="false">
      &#x22EE;
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <li><%= link_to "編集する", edit_post_path(post), class:"dropdown-item" %></li>
      <li>
        <%= link_to "削除する", post, method: :delete, data: { confirm: "削除すると戻せません。よろしいですか？" }, class:"dropdown-item" %>
      </li>
    </ul>
  </div>
  <% end %>
  <div class="">
    <%# いいねボタン %>
    <div>
      <!-- すでにいいねされている時 -->
      <% if current_user&.like?(post)  %>
      <%= render 'likes/unlike', post: post %>
      <!-- まだいいねしていない時 -->
      <% else id="like-button-#{post.id}" %>
      <%= render 'likes/like', post: post %>
      <% end %>
    </div>
    <%# SNSボタン %>
    <div>
      <%# 画像も共有可能にしたい↓ %>
      <%= link_to 'Twitter', "https://twitter.com/share?url=#{request.url}&text=#{post.content}", title: 'Twitter', target: '_blank', class:"twitter-share-button" %>
    </div>
  </div>
</li>