<% if @post.save %>
$('#flash_message').html("<%= j(render 'layouts/flash') %>");
$("textarea").val('');
$("#post_url").val('');
$("select").val('');
$("input[type='checkbox']").prop('checked', false);
$("#post_create_modal").modal("hide");
<% end %>

<% if @post.save && @post.privacy %>
$("#private_posts").prepend("<%= j(render 'posts/post', post: @post) %>");
<% elsif @post.save && @post.privacy == false %>
$("#posts").prepend("<%= j(render 'posts/post', post: @post) %>");
$(".mine-posts").prepend("<%= j(render 'posts/post', post: @post) %>");
<% end %>

<% if @post.privacy && @post.tag == "実践したい" %>
$(".want-private-posts").prepend("<%= j(render 'posts/post', post: @post) %>");
<% elsif !@post.privacy && @post.tag == "実践したい" %>
$(".want-posts").prepend("<%= j(render 'posts/post', post: @post) %>");
<% elsif @post.tag == "実践中" %>
$(".doing-posts").prepend("<%= j(render 'posts/post', post: @post) %>");
<% elsif @post.tag == "身についた" %>
$(".master-posts").prepend("<%= j(render 'posts/post', post: @post) %>");
<% end %>

$("#validation").html("<%= j(render 'shared/error_messages', object: @post) %>");