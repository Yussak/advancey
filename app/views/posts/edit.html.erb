<% provide(:title, '投稿編集') %>
<h1>投稿編集</h1>
<div class="mx-auto col-md-6">
  <%= form_with(model: @post, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, rows: 4, placeholder: "何か入力してください！", class: 'form-control' %>
  </div>
  <span class="image">
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", class: 'form-control' %>
  </span>
  <%= render 'posts/action_form', f: f %>
  <%= f.submit "更新する", class: "btn btn-primary" %>
  <% end %>
  <p class="text-start"> <%= link_to '戻る', 'javascript:history.back()' %></p>
</div>