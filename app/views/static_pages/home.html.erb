<% provide(:title, "ホーム") %>
<% if logged_in? %>
<div class="row">
  <aside class="col-md-6 mx-auto">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="post_form">
      <%= render 'shared/post_form' %>
    </section>
  </aside>
</div>
<% else %>
<div class="center jumbotron">
  <h1>Bookwormへようこそ！</h1>
  <ul>
    <li class="py-3"><%= link_to "新規登録はこちら", signup_path, class: "btn btn-lg btn-primary" %></li>
    <li><%= link_to "ログインはこちら", login_path, class: "btn btn-lg btn-primary" %></li>
  </ul>
</div>
<% end %>