<% if post.comments.any?%>
<% post.comments.reverse.each do |comment| %>
<div>
  <%# コメント投稿者の情報 %>
  <div class="d-flex justify-content-center">
    <%= link_to gravatar_for(comment.user, size: 40), comment.user %><%= comment.user.name %>さん
    <%= comment.created_at.to_s(:datetime_jp) %>
    <% if current_user == comment.user %>
    <div class="dropdown ms-3">
      <button class="btn btn-light border" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown"
        aria-expanded="false">
        &#x22EE;
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <li>
          <%= link_to "コメント削除", post_comment_path(comment.post, comment), method: :delete, class:"dropdown-item", remote: true, data: { confirm: "削除すると戻せません。よろしいですか？" } %>
        </li>
      </ul>
    </div>
    <% end %>
  </div>
  <%# コメント中身 %>
  <div class="border-secondary border text-start p-2">
    <%= simple_format(comment.content) %>
  </div>
  <hr>
  <% end %>
</div>
<% else %>
<p>まだコメントがありません</p>
<% end %>