<% provide(:title, "ログイン") %>
<h1>Advancey にログイン</h1>

<div class="row">
  <div class="col-md-6 mx-auto">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

    <%= f.email_field :email, placeholder: "メールアドレス", class: 'form-control' %>

    <%= link_to "パスワードを忘れたらこちら", new_password_reset_path %>
    <%= f.password_field :password, placeholder: "パスワード", class: 'form-control' %>

    <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
    <span>ログインしたままにする</span>
    <% end %>

    <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>

    <%= link_to "ゲストログイン", guest_path, method: :post, class: "btn btn-primary w-100" %>
    <p><%= link_to "新規登録はこちら", signup_path %></p>
  </div>
</div>